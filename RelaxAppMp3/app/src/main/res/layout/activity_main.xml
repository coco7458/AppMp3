<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4f037a"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.admin.relaxappmp3.MainActivity">


    <android.support.v4.view.ViewPager
        android:id="@+id/myViewPager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
    </android.support.v4.view.ViewPager>
    <TextView
        android:textSize="24sp"
        android:textColor="#ffff"
        android:text="Thiết kế bởi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtThongTin"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <!--Nút logo-->
    <ImageButton
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/logo"
        android:layout_width="80sp"
        android:layout_height="80sp"
        android:id="@+id/imageButton"
        android:layout_below="@+id/myViewPager"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/option"
        android:scaleType="fitCenter"
        android:id="@+id/imgMenu"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:background="@null"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/login"
        android:scaleType="fitCenter"
        android:id="@+id/ImageButtonLogin"
        android:layout_below="@+id/myViewPager"
        android:layout_toLeftOf="@+id/imgMenu"
        android:layout_toStartOf="@+id/imgMenu" />

    <TextView
        android:textSize="24sp"
        android:textColor="#ffffff"
        android:text="Nhạc nổi bật"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textviewNhacnoibat"
        android:layout_below="@+id/imageButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="15dp" />

    <ListView
        android:id="@+id/listBHnoibat"
        android:layout_width="match_parent"
        android:layout_height="320dp"
        android:layout_below="@+id/textviewNhacnoibat"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>
